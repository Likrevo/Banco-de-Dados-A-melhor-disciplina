-- PRIMEIRO
-- 1. a)
CREATE DATABASE ExsFixacao;
USE ExsFixacao;

CREATE TABLE nomes (
    nome VARCHAR(255)
);

INSERT INTO nomes (nome) VALUES
    ('Roberta'),
    ('Roberto'),
    ('Maria Clara'),
    ('Jo√£o');

-- 1. b)
SELECT UPPER(nome) AS nome_maiusculo FROM nomes;

-- 1. c)
SELECT nome, LENGTH(nome) AS tamanho_do_nome FROM nomes;

-- 1. d)
SET nome = CONCAT(
    CASE WHEN nome LIKE '%MARIA%' THEN 'Sra. ' ELSE 'Sr. ' END,
    nome
);

SELECT nome FROM nomes;
